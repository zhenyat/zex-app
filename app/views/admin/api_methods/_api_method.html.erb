<div class='container'>
  <table class='table table-striped'>
    <tbody>
      <% @api_method.attributes.each do |key, value| %>
        <tr>
          <% unless key == 'id' || key.include?('digest') || key == 'created_at' || key == 'updated_at' %>
            <% if key == 'status' %>
              <td><%= t 'status.status' %></td>
              <td><%= status_mark @api_method.status %></td>
            <% elsif key == 'api_id' %>
              <td>API</td>
              <td><%= "#{@api_method.api.dotcom.name} : #{@api_method.api.mode}" %></td>
            <% elsif key == 'link' %>
              <td>Link</td>
              <td><%= link_to('Find here', value) %></td>
            <% else %>
              <td><%= t "activerecord.attributes.api_method.#{key}" %></td>
              <td><%= value %></td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= render 'admin/shared/show_rich_text_content', object: @api_method %>
  <%= render 'admin/shared/show_images', object: @api_method %>
</div>
