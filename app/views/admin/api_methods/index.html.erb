<h1><%= t ApiMethod.model_name.human(count: 2) %></h1>
<table class='table table-hover'>
  <thead>
      <th>Dotcom</th>
      <th><%= ApiMethod.human_attribute_name(:api) %></th>
      <th><%= ApiMethod.human_attribute_name(:name) %></th>
      <th><%= ApiMethod.human_attribute_name(:title) %></th>
      <!--th><%= ApiMethod.human_attribute_name(:link) %></th-->
      <th><%= t 'status.status' %></th>
      <th><%= t 'actions.actions' %><th>
  </thead>

  <tbody>
    <% @api_methods.each do |api_method| %>
      <tr>
        <td><%= api_method.api.dotcom.name %></td>
        <td><%= api_method.api.mode %></td>
        <td><%= api_method.name %></td>
        <td><%= api_method.title %></td>
        <!--td><%= api_method.link %></td-->
        <td><%= status_mark api_method.status %></td>
        <td><%= render 'admin/shared/index_buttons_dddl', resource: api_method %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class='row'>
  <div class='col-md-2'>
    <%= link_to t('actions.create'), new_admin_api_method_path, class: 'btn btn-primary btn-sm' %>
  </div>
</div>
