<div class='container'>
  <table class='table table-striped'>
    <tbody>
      <% @pair_nickname.attributes.each do |key, value| %>
        <tr>
          <% unless key == 'id' || key.include?('digest') || key == 'created_at' || key == 'updated_at' %>
            <% if key == 'pair_id' %>
              <td><%= t "activerecord.attributes.pair_nickname.#{key}" %></td>
              <td><%= @pair_nickname.pair.code %></td>
            <% elsif key == 'status' %>
              <td><%= t 'status.status' %></td>
              <td><%= status_mark @pair_nickname.status %></td>
            <% else %>
              <td><%= t "activerecord.attributes.pair_nickname.#{key}" %></td>
              <td><%= value %></td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= render 'admin/shared/show_rich_text_content', object: @pair_nickname %>
  <%= render 'admin/shared/show_images', object: @pair_nickname %>
</div>
