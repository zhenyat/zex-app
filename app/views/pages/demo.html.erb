<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <h1 class="text-danger">Pages#demo</h1>
    </div>
    <p class="text-success">
      <%= 'Demo: bootstrap & locale' %>
    </p>
  </div>
  <hr/>
  <h4 class="text-info">
    <%= t :locale_testing %>
  </h4>
  <div class="row">
    <div class="col-md-2">
      <%= link_to @locale, root_path, class: 'btn btn-success' %>
    </div>
    <div class="col-md-2">
      <%= I18n.locale %>
    </div>
    <div class="col-md-2">
      <div class="text-primary">
        <%= t :hello_world %>
      </div>
    </div>
    <div class="col-md-5">
      <%= l Time.now %>
    </div>
  </div>
  <br/>
  <p class="text-success">
    <%= flash[:notice] %>
  </p>
  <hr/>
  <div class="nav-item dropdown">
    <a aria-expanded="false" aria-haspopup="true" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" id="navbarDropdown" role="button">
      <span aria-hidden="true" class="fas fa-language fa-2x" style="color:navy"></span>
      <%= t(:language) %>
    </a>
    <%= language_switch_bootstrap('admin') %>
  </div>
  <hr/>
  <h4>Dotcoms</h4>
  <% @dotcoms_attributes.each do |dotcom_attributes| %>
    <table class='table table-hover'>
      <% dotcom_attributes.each do |key, value| %>
        <tr>
          <td><%= key %></td>
          <% if key.to_s.include?('secret') or key.to_s.include?('key') %>
            <td><%= key_tail(value) %></td>
          <% else %>
            <td><%= value %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
    <hr/>
  <% end %>
</div>
